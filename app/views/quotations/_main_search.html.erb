<header class='quotation-header'>
  <div class='header-title'>
  Money-Producer
  </div>
  <div class='header-main'>
    <ul class='login-bar'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name, "#", class: "user-name"  %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
    <div class='create-edit'>
    <%= link_to '新規作成', "#", class: "create-edit-btn"  %>
    <%= link_to '編 集', "#", class: "create-edit-btn"  %>
    </div>
  </div>
  <div class='search-top'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='見積書IDから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='顧客名から探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='現場名から探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='search-bottom'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='金額から探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='提出日から探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='有効フラグから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    </form>
  </div>
</header>